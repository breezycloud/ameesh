@attribute [Authorize]

<MudGrid>
    @if (IsLoading)
    {
        <MudItem xs="12" sm="6" md="3">
            <MudSkeleton Class="rounded-lg" Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudSkeleton Class="rounded-lg" Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudSkeleton Class="rounded-lg" Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudSkeleton Class="rounded-lg" Animation="Animation.Wave" SkeletonType="SkeletonType.Rectangle" Height="100px;" />
        </MudItem>
    }
    else
    {
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4 rounded-lg" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.LocalPrintshop" Color="Color.Info" Class="mx-4" Style="width:50px; height:50px;"></MudIcon>
                <div style="width:100%;">
                    <h3 class="mud-text-secondary mb-n1">Today's Sales</h3>                    
                    <MudText Class="d-flex justify-start mb-n1" Typo="Typo.h6">@PharmacySales</MudText>
                </div>                
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4 rounded-lg" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.Outbound" Color="Color.Dark" Class="mx-4" Style="width:50px; height:50px;"></MudIcon>
                <div style="width:100%;">
                    <h3 class="mud-text-secondary mb-n1">Products Sold</h3>                    
                    <MudText Class="d-flex justify-start mb-n1" Typo="Typo.h6">@ProductsSold</MudText>
                </div>                
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4 rounded-lg" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.Output" Color="Color.Error" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <h3 class="mud-text-secondary mb-n1">Today's Expense</h3>                    
                    <MudText Class="d-flex justify-start mb-n1" Typo="Typo.h6">@Expense.ToString("N2")</MudText>
                </div>
            </MudPaper>
        </MudItem>        
        <MudItem xs="12" sm="3" md="3">
            <MudPaper Class="d-flex flex-row pt-6 pb-4 rounded-lg" Style="height:100px;" Outlined="true">
                <MudIcon Icon="@Icons.Material.Filled.Input" Color="Color.Success" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
                <div style="width:100%;">
                    <h3 class="mud-text-secondary mb-n1">Today's Revenue</h3>
                    @* <MudText Typo="Typo.h6" Class="mud-text-secondary mb-n1">Pharmacy Sales</MudText> *@
                    <MudText Class="d-flex justify-start mb-n1" Typo="Typo.h6">@Revenue.ToString("N2")</MudText>
                </div>
            </MudPaper>
        </MudItem>        
    }
</MudGrid>
@code {
    [Parameter, EditorRequired] public bool IsLoading { get; set; } = false;
    [Parameter, EditorRequired] public decimal Revenue { get; set; } = 0;
    [Parameter, EditorRequired] public decimal Expense { get; set; } = 0;
    [Parameter, EditorRequired] public int ProductsSold { get; set; } = 0;
    [Parameter, EditorRequired] public int PharmacySales { get; set; } = 0;
    public string? Role { get; set; }
    protected override async Task OnInitializedAsync()
    {
        Role = await localStorage.GetItemAsync<string?>("access");
    }
}